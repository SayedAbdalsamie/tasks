def sum_of_digits(n):
    total = 0
    while n > 0:
        digit = n % 10
        total += digit
        n //= 10
    return total

N = int(input("Enter the number of digits: "))
num = int(input(f"Enter a {N}-digit number: "))

digit_sum = sum_of_digits(num)
print("Sum of the digits:", digit_sum)
